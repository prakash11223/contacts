<!DOCTYPE >
<html lang="en">

<head>
    <title>
        <%= locals.title %>
    </title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://kit.fontawesome.com/35a79bff7f.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/home.css">
</head>

<body>
    <h1 id="heading">
        <i class="far fa-address-book"></i> My Contact List
    </h1>
    <div id="contacts-list-container">
        <ol class="contact">
            <% for(let i of contacts){%>
                <li>
                    <div class="details">
                        <p>
                            <%= i.name %>
                        </p>
                        <p>
                            <%= i.phone %>
                        </p>
                    </div>
                    <div class="delete-button">
                        <a href="/delete-contact/?id=<%= i._id %> ">
                            <i class="fas fa-window-close" aria-hidden="true"></i>
                        </a>
                    </div>
                </li>
                <% } %>
        </ol>
    </div>
    <form action="/create-contact" method="POST">
        <input type='text' name="name" placeholder="Enter Name" required="please enter the number">
        <input type='number' name="phone" placeholder="Enter phone" required><br>
        <button type="submit">Add</button>
    </form>
    <script src="/js/home.js"></script>
</body>

</html>